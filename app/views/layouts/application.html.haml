!!!
%html{:lang => "en"}
  %head
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/

    %link{:href => "/assets/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/

    %meta{:content => "/assets/tile.png", :name => "msapplication-TileImage"}/
    %meta{:content => "#00164E", :name => "msapplication-TileColor"}/

    %link{:href => "/assets/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "/assets/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "/assets/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "120x120"}/
    %link{:href => "/assets/apple-touch-icon-152x152.png", :rel => "apple-touch-icon", :sizes => "152x152"}/

    %title
      = content_for?(:title) ? yield(:title) : "VA Transaction Inventory"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600", rel: "stylesheet", type: "text/css"}/


  %body
    .wrap
      - if ENV['DEVELOPER_TESTING'].present?
        .test-banner
          %h1
            Notice: You are operating in a test environment
      .banner
        .row
          .small-12.large-8.columns
            %h1
              %a{href: "/"}
                %span
                  %abbr
                    VA
                  Inventory
          .small-12.large-4.columns.sign-in


      - if flash[:notice]
        .alerts.alert-box.success.animated.bounceInLeft
          .row
            .small-12.columns
              = notice
      - if flash[:alert]
        .alerts.alert-box.alert.animated.bounceInRight
          .row
            .small-12.columns
              = alert
      .page
        .row
          .small-12.columns
            = yield

      .footer
        .row
          .medium-1.columns
            %span.logo
          .medium-8.columns
            %p
              Department of Veterans Affairs
          .medium-3.columns.right
            %p
              %i.icon-comment
              

    = javascript_include_tag "application"
